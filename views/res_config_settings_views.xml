<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.product.label</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position="after">
                <div class="app_settings_block" data-string="Product Labels" string="Product Labels" data-key="st_dynamic_product_label_print">
                    <h2>Product Label Printing</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Layout</span>
                                <div class="text-muted">
                                    Define the grid and paper size for your label sheets.
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="label_rows" class="col-lg-3 o_light_label"/>
                                        <field name="label_rows"/>
                                    </div>
                                    <div class="row">
                                        <label for="label_cols" class="col-lg-3 o_light_label"/>
                                        <field name="label_cols"/>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Content</span>
                                <div class="text-muted">
                                    Choose what information to display on the labels.
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="label_show_internal_ref" class="o_light_label"/>
                                        <label for="label_show_internal_ref"/>
                                    </div>
                                    <div>
                                        <field name="label_show_on_hand_qty" class="o_light_label"/>
                                        <label for="label_show_on_hand_qty"/>
                                    </div>
                                    <div>
                                        <field name="label_show_attributes" class="o_light_label"/>
                                        <label for="label_show_attributes"/>
                                    </div>
                                    <div>
                                        <field name="label_show_barcode_digits" class="o_light_label"/>
                                        <label for="label_show_barcode_digits"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Styling</span>
                                <div class="text-muted">
                                    Adjust margins and font size for perfect alignment.
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="label_font_size" class="col-lg-3 o_light_label"/>
                                        <field name="label_font_size"/>
                                    </div>
                                    <div class="row">
                                        <label for="label_margin_top" class="col-lg-3 o_light_label"/>
                                        <field name="label_margin_top"/>
                                    </div>
                                    <div class="row">
                                        <label for="label_margin_bottom" class="col-lg-3 o_light_label"/>
                                        <field name="label_margin_bottom"/>
                                    </div>
                                    <div class="row">
                                        <label for="label_margin_left" class="col-lg-3 o_light_label"/>
                                        <field name="label_margin_left"/>
                                    </div>
                                    <div class="row">
                                        <label for="label_margin_right" class="col-lg-3 o_light_label"/>
                                        <field name="label_margin_right"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
