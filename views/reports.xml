<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Template -->
    <template id="report_product_labels">
        <t t-call="web.html_container">
            <t t-foreach="pages" t-as="labels">
                <t t-call="web.basic_layout">
                    <div class="page" t-attf-style="width: 100%; height: {{ printable_height }}mm;">
                        <style>
                            /* Basic styles for structure and overflow handling */
                            .label-box {
                                border: 1px solid black;
                                display: flex;
                                flex-direction: column;
                                box-sizing: border-box;
                                overflow: hidden;
                                height: 100%;
                                width: 100%;
                            }
                            .top-content {
                                flex-grow: 1;
                                display: flex;
                                flex-direction: column;
                                justify-content: center;
                                text-align: center;
                                overflow: hidden;
                            }
                            .bottom-content {
                                flex-shrink: 0;
                                text-align: center;
                                overflow: hidden;
                                margin-top: auto; /* Pushes the barcode to the bottom */
                            }
                            .product-name, .attribute-string, .internal-ref {
                                overflow-wrap: break-word;
                            }
                            .product-name { font-weight: bold; }
                            .attribute-string { font-size: 0.9em; }
                            .internal-ref { font-size: 0.85em; }
                            .stock-label { font-size: 0.8em; color: #666; }
                            .barcode-container {
                                margin: 0 auto;
                                width: 100%;
                                max-width: 90%; /* Ensure barcode doesn't touch the edges */
                            }
                        </style>
                        <!-- Conditionally center the table for single-column layouts -->
                        <table t-attf-style="width: {{ cols == 1 and '70%' or '100%' }}; height: 100%; border-collapse: collapse; border-spacing: 0; {{ cols == 1 and 'margin: 0 auto;' or '' }}">
                            <tbody>
                                <t t-foreach="range(rows)" t-as="row">
                                    <tr style="page-break-inside: avoid;">
                                        <t t-foreach="range(cols)" t-as="col">
                                            <t t-set="label" t-value="labels[row * cols + col] if (row * cols + col) &lt; len(labels) else {}"/>
                                            <!-- Label Cell -->
                                            <td t-attf-style="width: {{ 100 / cols }}%; height: {{ 100 / rows }}%; padding: 1mm; vertical-align: top; page-break-inside: avoid; box-sizing: border-box;">
                                                
                                                <!-- Label Box: Applies dynamic styles -->
                                                <div t-if="label.get('product_name')" class="label-box" t-attf-style="font-size: {{ label.get('font_size') }}; padding: {{ label.get('padding') }}; line-height: 1.1;">
                                                    
                                                    <!-- Top Content: Product Info -->
                                                    <div class="top-content">
                                                        <div class="product-name"><t t-esc="label['product_name']"/></div>
                                                        <div t-if="show_attributes and label['attribute_string']" class="attribute-string"><t t-esc="label['attribute_string']"/></div>
                                                        <div t-if="show_internal_ref" class="internal-ref">Code: <t t-esc="label['default_code']"/></div>
                                                    </div>
                                                    
                                                    <!-- Bottom Content: Barcode and Stock Info -->
                                                    <div class="bottom-content">
                                                        <t t-if="label['barcode']">
                                                            <div class="barcode-container" t-attf-style="max-height: {{ label.get('barcode_max_height') }};">
                                                                <div t-out="label['barcode']" t-options="{'widget': 'barcode', 'symbology': 'Code128', 'width': 600, 'height': 150, 'margin': 0, 'humanreadable': show_barcode_digits, 'img_style': 'width: 100%; height: auto; max-height: 100%;'}"/>
                                                            </div>
                                                        </t>
                                                        <div t-if="show_stock_label" class="stock-label">
                                                            Label <t t-esc="label['sequence']"/> of <t t-esc="label['total_quantity']"/>
                                                            <span t-if="show_on_hand_qty"> | Stock: <t t-esc="label['on_hand_qty']"/></span>
                                                        </div>
                                                    </div>

                                                </div>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <!-- Report Action -->
    <record id="action_report_product_labels" model="ir.actions.report">
        <field name="name">Product Labels</field>
        <field name="model">product.label.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">st_dynamic_product_label_print.report_product_labels</field>
        <field name="report_file">st_dynamic_product_label_print.report_product_labels</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
