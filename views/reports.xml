<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Template -->
    <template id="report_product_labels">
        <t t-call="web.html_container">
            <t t-foreach="pages" t-as="labels">
                <t t-call="web.basic_layout">
                    <div class="page" t-attf-style="height: 280mm; display: flex; flex-direction: column; justify-content: center;">
                        <t t-set="label_index" t-value="0"/>
                        <table style="width: 100%; border-collapse: collapse;">
                            <tbody>
                                <t t-foreach="range(rows)" t-as="row">
                                    <tr>
                                        <t t-foreach="range(cols)" t-as="col">
                                            <td t-attf-style="width: {{ 100 / cols }}%; height: {{ 280 / rows }}mm; padding: 1mm; vertical-align: top;">
                                                <t t-if="label_index &lt; len(labels)">
                                                    <t t-set="label" t-value="labels[label_index]"/>
                                                    <div t-attf-style="border: 1px solid black; padding: 5px; height: 100%; page-break-inside: avoid; display: flex; flex-direction: column; justify-content: center; font-size: {{ label.get('font_size', 12) }}px; line-height: 1.2;">
                                                        <div class="text-center">
                                                            <div style="font-weight: bold;">
                                                                <t t-esc="label['product_name']"/>
                                                            </div>
                                                            <div t-if="show_attributes and label['attribute_string']" style="font-size: 0.8em;">
                                                                <t t-esc="label['attribute_string']"/>
                                                            </div>
                                                            <div t-if="show_internal_ref" style="font-size: 0.8em;">Code:
                                                                <t t-esc="label['default_code']"/>
                                                            </div>
                                                            <t t-if="label['barcode']">
                                                                <div style="padding-top: 5px; padding-bottom: 5px;">
                                                                    <div t-out="label['barcode']" t-options="{'widget': 'barcode', 'symbology': 'Code128', 'width': 600, 'height': 150, 'img_style': 'width:100%;height:40px;'}"/>
                                                                </div>
                                                                <div t-if="show_barcode_digits" style="font-size: 0.9em;">
                                                                    <t t-esc="label['barcode']"/>
                                                                </div>
                                                            </t>
                                                            <div t-if="show_stock_label" style="font-size: 0.8em; color: #666;">
                                                                Label
                                                                <t t-esc="label['sequence']"/>
                                                                of
                                                                <t t-esc="label['total_quantity']"/>
                                                                <span t-if="show_on_hand_qty">
                                                                    | Stock:
                                                                    <t t-esc="label['on_hand_qty']"/>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <t t-set="label_index" t-value="label_index + 1"/>
                                                </t>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <!-- Report Action -->
    <record id="action_report_product_labels" model="ir.actions.report">
        <field name="name">Product Labels</field>
        <field name="model">product.label.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">st_dynamic_product_label_print.report_product_labels</field>
        <field name="report_file">st_dynamic_product_label_print.report_product_labels</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
