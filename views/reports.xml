<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Template -->
    <template id="report_product_labels">
        <t t-call="web.html_container">
            <t t-foreach="pages" t-as="labels">
                <t t-call="web.basic_layout">
                    <div class="page" t-attf-style="height: {{ printable_height }}mm; display: flex; flex-direction: column; justify-content: flex-start;">
                        <t t-set="label_index" t-value="0"/>
                        <table style="width: 100%; border-collapse: collapse; border-spacing: 0;">
                            <tbody>
                                <t t-foreach="range(rows)" t-as="row">
                                    <tr style="page-break-inside: avoid; margin: 0; padding: 0;">
                                        <t t-foreach="range(cols)" t-as="col">
                                            <td t-attf-style="width: {{ 100 / cols }}%; height: {{ printable_height / rows }}mm; margin: 0; padding: 0.5mm; vertical-align: top; page-break-inside: avoid; box-sizing: border-box; border: none;">
                                                <t t-if="label_index &lt; len(labels)">
                                                    <t t-set="label" t-value="labels[label_index]"/>
                                                    <div t-attf-style="border: 1.5px solid black; padding: 1mm; height: 100%; width: 100%; page-break-inside: avoid; display: flex; flex-direction: column; justify-content: space-between; font-size: {{ label.get('font_size', 14) }}px; line-height: 1.0; box-sizing: border-box; overflow: hidden;">
                                                        <t t-if="label.get('product_name')">
                                                            <div class="text-center">
                                                                <div t-attf-style="font-weight: bold; overflow-wrap: break-word; margin-bottom: 1mm;">
                                                                    <t t-esc="label['product_name']"/>
                                                                </div>
                                                                <div t-if="show_attributes and label['attribute_string']" t-attf-style="overflow-wrap: break-word; margin-bottom: 1mm; font-size: 0.9em;">
                                                                    <t t-esc="label['attribute_string']"/>
                                                                </div>
                                                                <div t-if="show_internal_ref" style="font-size: 0.8em; margin-bottom: 1mm;">Code: <t t-esc="label['default_code']"/></div>
                                                            </div>
                                                            <div class="text-center" style="padding-bottom: 1mm;">
                                                                <t t-if="label['barcode']">
                                                                    <div style="margin-bottom: 1mm;">
                                                                        <div t-out="label['barcode']" t-options="{'widget': 'barcode', 'symbology': 'Code128', 'width': 250, 'height': 50, 'margin': 0}"/>
                                                                    </div>
                                                                    <div t-if="show_barcode_digits" style="font-size: 0.7em; word-break: break-all; margin-bottom: 1mm;">
                                                                        <t t-esc="label['barcode']"/>
                                                                    </div>
                                                                </t>
                                                                <div t-if="show_stock_label" style="color: #666; font-size: 0.8em;">
                                                                    Label <t t-esc="label['sequence']"/> of <t t-esc="label['total_quantity']"/>
                                                                    <span t-if="show_on_hand_qty"> | Stock: <t t-esc="label['on_hand_qty']"/></span>
                                                                </div>
                                                            </div>
                                                        </t>
                                                        <t t-else="">
                                                            <!-- Force empty box for blanks: No content, but full structure -->
                                                            <div style="height: 100%; width: 100%;"></div>
                                                        </t>
                                                    </div>
                                                    <t t-set="label_index" t-value="label_index + 1"/>
                                                </t>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <!-- Report Action (unchanged) -->
    <record id="action_report_product_labels" model="ir.actions.report">
        <field name="name">Product Labels</field>
        <field name="model">product.label.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">st_dynamic_product_label_print.report_product_labels</field>
        <field name="report_file">st_dynamic_product_label_print.report_product_labels</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
