<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Template -->
    <template id="report_product_labels">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <div class="page">
                    <table style="width: 100%; border-collapse: collapse;">
                        <tbody>
                            <t t-foreach="labels" t-as="label">
                                <t t-if="label_index % 2 == 0">
                                    <tr>
                                        <td style="width: 50%; padding: 4mm; vertical-align: top;">
                                            <div style="border: 1px solid black; padding: 5px; height: 100%; page-break-inside: avoid;">
                                                <div class="text-center">
                                                    <div style="font-size: 12px; font-weight: bold;"><t t-esc="labels[label_index]['product_name']"/></div>
                                                    <div t-if="labels[label_index]['attribute_string']" style="font-size: 10px;"><t t-esc="labels[label_index]['attribute_string']"/></div>
                                                    <div style="font-size: 10px;">Code: <t t-esc="labels[label_index]['default_code']"/></div>
                                                    <t t-if="labels[label_index]['barcode']">
                                                        <div style="padding-top: 5px; padding-bottom: 5px;">
                                                            <div t-out="labels[label_index]['barcode']" t-options="{'widget': 'barcode', 'symbology': 'Code128', 'width': 600, 'height': 150, 'img_style': 'width:100%;height:40px;'}"/>
                                                        </div>
                                                    </t>
                                                    <div style="font-size: 9px; color: #666;">
                                                        Label <t t-esc="labels[label_index]['sequence']"/> of <t t-esc="labels[label_index]['total_quantity']"/> | Stock: <t t-esc="labels[label_index]['on_hand_qty']"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td t-if="(label_index + 1) &lt; len(labels)" style="width: 50%; padding: 4mm; vertical-align: top;">
                                            <div style="border: 1px solid black; padding: 5px; height: 100%; page-break-inside: avoid;">
                                                <div class="text-center">
                                                    <div style="font-size: 12px; font-weight: bold;"><t t-esc="labels[label_index + 1]['product_name']"/></div>
                                                    <div t-if="labels[label_index + 1]['attribute_string']" style="font-size: 10px;"><t t-esc="labels[label_index + 1]['attribute_string']"/></div>
                                                    <div style="font-size: 10px;">Code: <t t-esc="labels[label_index + 1]['default_code']"/></div>
                                                    <t t-if="labels[label_index + 1]['barcode']">
                                                        <div style="padding-top: 5px; padding-bottom: 5px;">
                                                            <div t-out="labels[label_index + 1]['barcode']" t-options="{'widget': 'barcode', 'symbology': 'Code128', 'width': 600, 'height': 150, 'img_style': 'width:100%;height:40px;'}"/>
                                                        </div>
                                                    </t>
                                                    <div style="font-size: 9px; color: #666;">
                                                        Label <t t-esc="labels[label_index + 1]['sequence']"/> of <t t-esc="labels[label_index + 1]['total_quantity']"/> | Stock: <t t-esc="labels[label_index + 1]['on_hand_qty']"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td t-else="" style="width: 50%;"/>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_product_labels" model="ir.actions.report">
        <field name="name">Product Labels</field>
        <field name="model">product.label.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">st_dynamic_product_label_print.report_product_labels</field>
        <field name="report_file">st_dynamic_product_label_print.report_product_labels</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="st_dynamic_product_label_print.paperformat_label"/>
    </record>

    <!-- Custom Paper Format -->
    <record id="paperformat_label" model="report.paperformat">
        <field name="name">Label Paper Format</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>
</odoo>
