<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Template -->
    <template id="report_product_labels">
        <t t-call="web.html_container">
            <t t-foreach="pages" t-as="labels">
                <t t-call="web.basic_layout">
                    <div class="page" t-attf-style="height: {{ printable_height }}mm;">
                        <table style="width: 100%; border-collapse: collapse; border-spacing: 0;">
                            <tbody>
                                <t t-foreach="range(rows)" t-as="row">
                                    <tr style="page-break-inside: avoid;">
                                        <t t-foreach="range(cols)" t-as="col">
                                            <!-- Label Cell -->
                                            <td t-attf-style="width: {{ 100 / cols }}%; padding: 1mm; vertical-align: top; page-break-inside: avoid; box-sizing: border-box;">
                                                <t t-set="label" t-value="labels[row * cols + col] if (row * cols + col) &lt; len(labels) else {}"/>
                                                
                                                <!-- Label Box: Main container for content -->
                                                <div t-if="label.get('product_name')" t-attf-style="border: 1.5px solid black; padding: 1mm; height: 100%; width: 100%; display: flex; flex-direction: column; justify-content: space-between; font-size: {{ label.get('font_size', 14) }}px; line-height: 1.2; box-sizing: border-box; overflow: hidden;">
                                                    
                                                    <!-- Top Content: Product Info -->
                                                    <div class="text-center" style="overflow-wrap: break-word; margin-bottom: 1mm;">
                                                        <div t-attf-style="font-weight: bold; font-size: {{ max(0.9, 1.1 - 0.07 * max(0, cols - 2)) }}em;"><t t-esc="label['product_name']"/></div>
                                                        <div t-if="show_attributes and label['attribute_string']" t-attf-style="font-size: {{ max(0.85, 1.05 - 0.07 * max(0, cols - 2)) }}em;"><t t-esc="label['attribute_string']"/></div>
                                                        <div t-if="show_internal_ref" t-attf-style="font-size: {{ max(0.8, 0.95 - 0.04 * max(0, cols - 2)) }}em;">Code: <t t-esc="label['default_code']"/></div>
                                                    </div>
                                                    
                                                    <!-- Bottom Content: Barcode and Stock Info -->
                                                    <div class="text-center" style="overflow-wrap: break-word;">
                                                        <t t-if="label['barcode']">
                                                            <div style="margin: 1mm auto 0;">
                                                                <div t-out="label['barcode']" t-options="{'widget': 'barcode', 'symbology': 'Code128', 'width': 250, 'height': 60, 'margin': 0, 'humanreadable': show_barcode_digits}"/>
                                                            </div>
                                                        </t>
                                                        <div t-if="show_stock_label" style="color: #666; font-size: 0.85em; margin-top: 1mm;">
                                                            Label <t t-esc="label['sequence']"/> of <t t-esc="label['total_quantity']"/>
                                                            <span t-if="show_on_hand_qty"> | Stock: <t t-esc="label['on_hand_qty']"/></span>
                                                        </div>
                                                    </div>

                                                </div>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <!-- Report Action (unchanged) -->
    <record id="action_report_product_labels" model="ir.actions.report">
        <field name="name">Product Labels</field>
        <field name="model">product.label.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">st_dynamic_product_label_print.report_product_labels</field>
        <field name="report_file">st_dynamic_product_label_print.report_product_labels</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
