<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_product_labels">
        <t t-call="web.html_container">
            <t t-foreach="pages" t-as="page_labels">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <style>
                            .o_label_sheet {
                                width: {{ printable_width }}mm;
                                height: {{ printable_height }}mm;
                                margin: 0 auto;
                            }
                            .label_table {
                                width: 100%;
                                height: 100%;
                                border-spacing: 0;
                                border-collapse: collapse;
                            }
                            .label_cell {
                                text-align: center;
                                overflow: hidden;
                                box-sizing: border-box;
                            }
                            .o_label_full {
                                border: 1px solid #000;
                                height: 100%;
                                width: 100%;
                                box-sizing: border-box;
                                padding: 2mm;
                                display: flex;
                                flex-direction: column;
                            }
                            .o_label_name {
                                font-weight: bold;
                                font-size: 1.1em;
                                overflow-wrap: break-word;
                            }
                            .o_label_data {
                                flex-grow: 1;
                                display: flex;
                                flex-direction: column;
                                justify-content: flex-end;
                            }
                            .attribute-string, .internal-ref {
                                font-size: 0.9em;
                                overflow-wrap: break-word;
                            }
                            .barcode-container {
                                margin: 1mm auto;
                            }
                            .stock-label {
                                font-size: 0.8em;
                                color: #666;
                            }
                        </style>

                        <div class="o_label_sheet">
                            <table class="label_table">
                                <t t-foreach="range(rows)" t-as="row_index">
                                    <tr t-attf-style="height: {{ 100 / rows }}%;">
                                        <t t-foreach="range(cols)" t-as="col_index">
                                            <t t-set="label" t-value="page_labels[row_index * cols + col_index] if (row_index * cols + col_index) &lt; len(page_labels) else {}"/>
                                            <td class="label_cell" t-attf-style="width: {{ 100 / cols }}%;">
                                                <div t-if="label.get('product_name')" class="o_label_full" t-attf-style="font-size: {{ label.get('font_size') }};">
                                                    
                                                    <div class="o_label_name"><t t-esc="label['product_name']"/></div>
                                                    <div t-if="show_attributes and label['attribute_string']" class="attribute-string"><t t-esc="label['attribute_string']"/></div>
                                                    <div t-if="show_internal_ref" class="internal-ref">Code: <t t-esc="label['default_code']"/></div>
                                                    
                                                    <div class="o_label_data">
                                                        <t t-if="label['barcode']">
                                                            <div class="barcode-container" t-attf-style="max-height: {{ label.get('barcode_max_height') }};">
                                                                <div t-out="label['barcode']" t-options="{'widget': 'barcode', 'symbology': 'Code128', 'width': 400, 'height': 150, 'margin': 0, 'humanreadable': show_barcode_digits, 'img_style': 'width: 100%; height: auto; max-height: 100%;'}"/>
                                                            </div>
                                                        </t>
                                                        <div t-if="show_stock_label" class="stock-label">
                                                            Label <t t-esc="label['sequence']"/> of <t t-esc="label['total_quantity']"/>
                                                            <span t-if="show_on_hand_qty"> | Stock: <t t-esc="label['on_hand_qty']"/></span>
                                                        </div>
                                                    </div>

                                                </div>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_product_labels" model="ir.actions.report">
        <field name="name">Product Labels</field>
        <field name="model">product.label.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">st_dynamic_product_label_print.report_product_labels</field>
        <field name="report_file">st_dynamic_product_label_print.report_product_labels</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
