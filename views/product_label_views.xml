<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_product_label_wizard_form" model="ir.ui.view">
        <field name="name">product.label.wizard.form</field>
        <field name="model">product.label.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Product Labels">
                <sheet>
                    <group>
                        <group string="Product Selection">
                            <field name="product_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                        <group string="Print Configuration">
                            <field name="paperformat_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Label Quantity">
                            <field name="label_quantity"/>
                            <field name="custom_quantity" required="[('label_quantity', '=', 'custom')]" invisible="[('label_quantity', '!=', 'custom')]"/>
                        </group>
                        <group string="Sheet Layout">
                            <field name="print_format" widget="radio"/>
                            <field name="rows" readonly="print_format != 'other'" force_save="1"/>
                            <field name="cols" readonly="print_format != 'other'" force_save="1"/>
                            <field name="start_row"/>
                            <field name="start_col"/>
                            <field name="skipped_pages"/>
                        </group>
                    </group>
                    <group string="Label Content Options">
                        <group>
                            <field name="show_attributes"/>
                            <field name="show_internal_ref"/>
                            <field name="show_barcode_digits"/>
                        </group>
                        <group>
                            <field name="show_stock_label"/>
                            <field name="show_on_hand_qty" invisible="not show_stock_label"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print_labels" string="Print Labels" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for Wizard -->
    <record id="action_product_label_wizard" model="ir.actions.act_window">
        <field name="name">Print Product Labels</field>
        <field name="res_model">product.label.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
