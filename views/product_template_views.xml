<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Print button to Product form -->
    <record id="view_product_template_form_inherit_label" model="ir.ui.view">
        <field name="name">product.template.form.inherit.label.print</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="action_print_product_labels" string="Print Labels" type="object" class="btn-primary"/>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Server action for product variants -->
    <record id="action_product_variant_print_labels" model="ir.actions.server">
        <field name="name">Print Labels</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = records.action_print_labels()
        </field>
    </record>
</odoo>
