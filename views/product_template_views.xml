<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 1. Add "Print Labels" button to the Product Template form view (in the top-right button box) -->
    <record id="view_product_template_form_inherit_label" model="ir.ui.view">
        <field name="name">product.template.form.inherit.label.print</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_documents']" position="before">
                <button name="action_print_product_labels"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-print"
                    string="Print Labels"/>
            </xpath>
        </field>
    </record>

    <!-- 2. Add "Print Labels" to the "Action" menu on the Product Template (main products) list view -->
    <record id="action_product_template_print_labels" model="ir.actions.server">
        <field name="name">Print Labels</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_print_product_labels()
        </field>
    </record>

    <!-- 3. Add "Print Labels" to the "Action" menu on the Product Variant list view -->
    <record id="action_product_variant_print_labels" model="ir.actions.server">
        <field name="name">Print Labels</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_print_labels()
        </field>
    </record>
</odoo>